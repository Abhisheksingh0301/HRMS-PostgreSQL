<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 0;
            color: #333;
        }

        .report-container {
            max-width: 900px;
            margin: auto;
            border: 1px solid #ddd;
            padding: 20px;
            border-radius: 8px;
        }

        .report-header {
            text-align: center;
            margin-bottom: 20px;
        }

        .report-header h1 {
            margin: 0;
            font-size: 24px;
        }

        .report-header p {
            margin: 5px 0;
            font-size: 16px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        table,
        th,
        td {
            border: 1px solid #ddd;
        }

        th,
        td {
            padding: 8px;
            text-align: left;
            font-family: 'Times New Roman', Times, serif;
        }

        th {
            background-color: #f4f4f4;
        }
        .center-align {
            text-align: center;
        }

        .footer {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
            color: #777;
        }

        @media print {
            .no-print {
                display: none;
            }
        }
    </style>
    <link href="/tailwind/output.css" rel="stylesheet">
</head>
<body>
    <div class="report-container">
        <div class="report-header">
            <h1 class="text-5xl font-sans font-extrabold"><%= title %></h1>
            <p>Department: <%= dept %></p>
            <p>Report Period: <%= moment(stdate).format("DD-MMM-YYYY") %> to <%= moment(enddate).format("DD-MMM-YYYY") %></p>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <% 
                    const headersSet = new Set();
                    data.forEach(record => {
                        Object.keys(record).forEach(key => {
                            if (key !== 'emp_name' && key !== 'Total_Leaves') {
                                headersSet.add(key.replace('_total_leaves', ''));
                            }
                        });
                    });
                    const headers = Array.from(headersSet);
                    headers.forEach(header => { %>
                        <th class="center-align"><%= header %></th>
                    <% }); %>
                    <th class="center-align">Total</th> <!-- Add the Total column header at the end -->
                </tr>
            </thead>
            <tbody>
                <% data.forEach(record => { %>
                    <tr>
                        <td><%= record.emp_name %></td>
                        <% 
                        let totalLeaves = 0;
                        headers.forEach(header => {
                            const leaveValue = parseFloat(record[`${header}_total_leaves`] || 0);
                            totalLeaves += leaveValue;
                        %>
                        <td class="center-align"><%= leaveValue || '' %></td>
                        <% }); %>
                        <td class="center-align"><%= totalLeaves %></td> <!-- Display the total sum -->
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <div class="footer">
            <p>Report Generated on: <%= moment(curdt).format("MMMM DD, YYYY") %></p>
            <p class="text-xs">Â© 2024 Abhishek Kumar Singh</p>
            <p class="no-print">Print this report by using the print function in your browser.</p>
        </div>
    </div>
</html>