<title>
    <%= title %>
</title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
<script src="https://kit.fontawesome.com/00d76a4bef.js" crossorigin="anonymous"></script>
<link rel='stylesheet' href='/stylesheets/style.css'>
<script src="/js/jquery.js"></script>
<%- include('header'); -%>

    <div class="flex-1 bg-cover bg-center" style="background-image: url('/images/loginbk.png');">
        <div class="flex items-center justify-center h-2/3 bg-black bg-opacity-50">
            <div class="bg-white p-8 w-96 rounded-lg shadow-lg opacity-80">
                <h2 class="text-2xl font-bold text-center mb-6 text-gray-900">
                    <%= title %>
                </h2>
                <form action="/login" method="POST">
                    <div class="mb-4">
                        <label for="txtuser" class="block text-sm font-medium text-gray-700">Username</label>
                        <select id="txtuser" name="txtuser"
                            class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-500 focus:outline-none"
                            required>
                            <option value=""> Select name</option>
                            <% for (var i=0; i<empdata.length; i++){ %>
                                <option value='<%= empdata[i].emp_name %>'>
                                    <%= empdata[i].emp_name %>
                                </option>
                                <% } %>
                        </select>
                    </div>
                    <div class="mb-4">
                        <label for="txtpwd" class="block text-sm font-medium text-gray-700">Password</label>
                        <input type="password" id="txtpwd" name="txtpwd" required
                            class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-500 focus:outline-none">
                    </div>
                    <button type="submit"
                        class="w-full bg-green-600 text-white font-bold py-2 rounded-md hover:bg-green-700 transition duration-200">
                        Submit
                    </button>
                </form>
                <p class="text-stone-800 text-sm font-sans text-center"> Don't have an account.<a href="/signup"
                        class="hover:underline hover:text-blue-800">Click to SignUp</a></p>
            </div>
        </div>
    </div>
    <%- include('footer'); -%>